    <script>
        $(document).ready(function() {
            // Like button click event
            $('.like-btn').click(function() {
                var button = $(this);
                var forumId = button.data('forum-id');
                var likeCountElem = button.find('.like-count');
                var likeCount = parseInt(likeCountElem.text());

                $.ajax({
                    url: '/forum/like/' + forumId,
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            likeCountElem.text(response.likeCount);
                            console.log("Like count updated:", response.likeCount);
                        } else {
                            console.error("Error updating like count:", response.error);
                            // Handle error gracefully
                        }
                    },
                    error: function(jqXHR, textStatus, errorThrown) {
                        console.error("Error:", textStatus, errorThrown);
                        // Handle AJAX request errors
                    }
                });
            });

            // Dislike button click event
            $('.dislike-btn').click(function() {
                var button = $(this);
                var forumId = button.data('forum-id');
                var dislikeCountElem = button.find('.dislike-count');
                var dislikeCount = parseInt(dislikeCountElem.text());

                $.ajax({
                    url: '/forum/dislike/' + forumId,
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            dislikeCountElem.text(response.dislikeCount);
                            console.log("Dislike count updated:", response.dislikeCount);
                        } else {
                            console.error("Error updating dislike count:", response.error);
                            // Handle error gracefully
                        }
                    },
                    error: function(jqXHR, textStatus, errorThrown) {
                        console.error("Error:", textStatus, errorThrown);
                        // Handle AJAX request errors
                    }
                });
            });
        });
