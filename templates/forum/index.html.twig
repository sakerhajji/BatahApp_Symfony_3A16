    <script>
        // Function to call the best prices action and display flashy notification
        function displayBestPricesNotification() {
            // Fetch best prices data from the server
            $.getJSON('{{ path('best_prices') }}', function(data) {
                // Check if data is available
                if (data.length > 0) {
                    // Construct the message for the flashy notification
                    let message = "Best Prices: ";
                    data.forEach(function(priceData) {
                        message += `$${priceData.prix} on ${priceData.createdAt}, `;
                    });
                    message = message.slice(0, -2); // Remove the trailing comma and space

                    // Display the flashy notification
                    Flashy.success(message);
                }
            })
                .fail(function(jqXHR, textStatus, errorThrown) {
                    console.error('Error fetching best prices data:', errorThrown);
                });
        }

        function runEveryTwoMinutes() {
            displayBestPricesNotification();

            setInterval(displayBestPricesNotification, 120000); // 120000 milliseconds = 2 minutes
        }

        runEveryTwoMinutes();
