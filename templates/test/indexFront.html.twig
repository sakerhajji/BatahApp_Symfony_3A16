{% extends 'frontP.html.twig' %}
{% block partenaires %}

    <!-- Our Partners -->
    <section class="our-partner pt0 pb100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="main-title text-center">
                        <h2>Les partenaires</h2>
                    </div>
                </div>
            </div>
            <div class="partner_divider">
                <div class="row">
                    {% for partenaire in partenaires %}
                        <div class="col-6 col-xs-6 col-sm-4 col-xl-2 wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.1s">
                            <div class="partner_item">
                                <img src="{{ asset('image/uploads/partenaires/' ~ partenaire.logo) }}" alt="Logo" style="width: 100px;">
                                <h5> {{ partenaire.nom}}</h5>
                            </div>
                        </div>
                    {% endfor %}


                </div>
            </div>
        </div>
    </section>


    <!-- Testimonials  -->
    <section class="our-testimonials-home1 pt120 pb120">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="main-title text-center">
                        <h2>Avis Livraisons</h2>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-lg-12">
                    <div class="testimonial_slider_home1">
                        {% for avi in avis %}
                            <div class="item">
                                <div class="testimonial_box">
                                    <div class="thumb">
                                        <img class="rounded-circle mr10"  src="{{ asset('image/uploads/' ~ avi.livraison.commande.idClient.avatar) }}" alt="avatar" height="80px" width="80px">
                                        <h4 class="sub_title mt20">{{ avi.livraison.commande.idClient.nomutilisateur }} {{ avi.livraison.commande.idClient.prenomutilisateur }}</h4>
                                    </div>
                                    <div class="details">
                                        <div class="icon"><span class="fa fa-quote-left"></span></div>
                                        <p class="mt15 mb30">{{ avi.commentaire }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

            </div>

        </div>
    </section>
{% endblock %}